<script>
	$(document).ready(function(){
		$('#email-form-id').submit(function(e){
			e.preventDefault();
			
			var $form = $(this),
				url = $form.attr('action');
			
			$.post(url, $(this).serialize()).done(function(data){
				alert(data);
				$form.find("input[name='sender_name']").val('');
				$form.find("input[name='sender_email']").val('');
				$form.find('textarea').val('');
			});
		});
	});
</script>

