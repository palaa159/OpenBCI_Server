					<option value="Media or Promotional Partnership">Media or Promotional Partnership</option>
					<option value="Employment or Internship Opportunities">Employment or Internship Opportunities</option>
					<option value="Other">Other</option>
				</select>
			</div>
			
			<div class="form-group">
				<textarea name="email_text" cols="40" rows="10" placeholder="Your message here" class="form-control"></textarea>			</div>
			
			<div class="form-group">	
				<input type="submit" name="submit" value="Submit" id="submit" class="btn btn-primary">			</div>
				
			</form>
		</div>

